---
import Angular from "./tags/Angular.astro";
import Bootstrap from "./tags/Bootstrap.astro";
import Css from "./tags/Css.astro";
import Firebase from "./tags/Firebase.astro";
import Html from "./tags/Html.astro";
import Javascript from "./tags/Javascript.astro";
import MongoDB from "./tags/MongoDB.astro";
import Next from "./tags/Next.astro";
import Node from "./tags/Node.astro";
import React from "./tags/React.astro";
import Sass from "./tags/Sass.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-orange-600 bg-opacity-20  text-white",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-500 bg-opacity-20  text-white",
    icon: Css,
  },
  Javascript: {
    name: "Javascript",
    class: "bg-yellow-500 bg-opacity-20  text-white",
    icon: Javascript,
  },
  React: {
    name: "React.js",
    class: "bg-cyan-500 bg-opacity-20  text-white",
    icon: React,
  },
  ReactNative: {
    name: "React Native",
    class: "bg-blue-600 bg-opacity-20  text-white",
    icon: React,
  },
  Bootstrap: {
    name: "Bootstrap",
    class: "bg-purple-600 bg-opacity-20  text-white",
    icon: Bootstrap,
  },
  Next: {
    name: "Next.js",
    class: "bg-black bg-opacity-20  text-white",
    icon: Next,
  },
  Tailwind: {
    name: "Tailwind.css",
    class: "bg-teal-500 bg-opacity-20  text-white",
    icon: "",
  },
  Sass: {
    name: "Sass",
    class: "bg-pink-500 bg-opacity-20  text-white",
    icon: Sass,
  },
  MongoDB: {
    name: "MongoDB",
    class: "bg-green-500 bg-opacity-20  text-white",
    icon: MongoDB,
  },
  Angular: {
    name: "Angular.js",
    class: "bg-red-600 bg-opacity-20  text-white",
    icon: Angular,
  },
  Node: {
    name: "node.js",
    class: "bg-green-700 bg-opacity-20  text-white",
    icon: Node,
  },
  Firebase: {
    name: "Firebase",
    class: "bg-yellow-400 bg-opacity-20  text-white",
    icon: Firebase,
  },
};

const PROJECTS = [
  {
    title: "Proyecto 1",
    description: "Loremp ipsum",
    link: "e-commerce-react-wonderbike.vercel.app",
    github: "https://github.com/Nath-Maya/ecommerce-React.git",
    image: "/projects/ecommerce-react.webp",
    tags: [TAGS.React, TAGS.Bootstrap, TAGS.Firebase],
  },
];
---

{
  (
    <div class="flex flex-col gap-y-16">
      {PROJECTS.map(({ image, title, description, tags, link, github }) => (
        <article>
          <h3 class="text-xl text-sky-500 dark:text-gray-100">
            {title}
          </h3>
          <p> {description}</p>
          <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <img class="rounded shadow-2xl shadow-white/10 size-8/12" src={image} alt={`Captura de pantalla del proyecto ${image}`}>
        </article>
      ))}
    </div>
  )
}
