---
import GithubIcon from "./icons/GithubIcon.astro";
import WindownIcon from "./icons/WindownIcon.astro";
import DeviceIcon from "./icons/DeviceIcon.astro";
import Angular from "./tags/Angular.astro";
import Bootstrap from "./tags/Bootstrap.astro";
import Css from "./tags/Css.astro";
import Firebase from "./tags/Firebase.astro";
import Html from "./tags/Html.astro";
import Javascript from "./tags/Javascript.astro";
import MongoDB from "./tags/MongoDB.astro";
import Next from "./tags/Next.astro";
import Node from "./tags/Node.astro";
import React from "./tags/React.astro";
import Sass from "./tags/Sass.astro";

const TAGS = {
  HTML: {
    name: "HTML",
    class: "bg-orange-600 bg-opacity-20  text-white",
    icon: Html,
  },
  CSS: {
    name: "CSS",
    class: "bg-blue-500 bg-opacity-20  text-white",
    icon: Css,
  },
  Javascript: {
    name: "Javascript",
    class: "bg-yellow-500 bg-opacity-20  text-white",
    icon: Javascript,
  },
  React: {
    name: "React.js",
    class: "bg-cyan-500 bg-opacity-20  text-white",
    icon: React,
  },
  ReactNative: {
    name: "React Native",
    class: "bg-blue-600 bg-opacity-20  text-white",
    icon: React,
  },
  Bootstrap: {
    name: "Bootstrap",
    class: "bg-purple-600 bg-opacity-20  text-white",
    icon: Bootstrap,
  },
  Next: {
    name: "Next.js",
    class: "bg-black bg-opacity-20  text-white",
    icon: Next,
  },
  Tailwind: {
    name: "Tailwind.css",
    class: "bg-teal-500 bg-opacity-20  text-white",
    icon: "",
  },
  Sass: {
    name: "Sass",
    class: "bg-pink-500 bg-opacity-20  text-white",
    icon: Sass,
  },
  MongoDB: {
    name: "MongoDB",
    class: "bg-green-500 bg-opacity-20  text-white",
    icon: MongoDB,
  },
  Angular: {
    name: "Angular.js",
    class: "bg-red-300 bg-opacity-20  text-white",
    icon: Angular,
  },
  Node: {
    name: "node.js",
    class: "bg-green-700 bg-opacity-20  text-white",
    icon: Node,
  },
  Firebase: {
    name: "Firebase",
    class: "bg-yellow-400 bg-opacity-20  text-white",
    icon: Firebase,
  },
};

const PROJECTS = [
  {
    title: "Ecommerce Wonder Bike",
    description:
      "En este proyecto, los usuarios pueden explorar una variedad de productos y agregar sus artículos favoritos al carrito de compras. El sitio proporciona una vista detallada de cada producto, incluyendo precios y descripciones. Los clientes pueden ver un resumen de su carrito, con un desglose completo de los precios y el total de su compra, lo que facilita una experiencia de compra sencilla y transparente. El flujo termina en la generación del checkout la cual se puede enviar al correo.",
    link: "https://e-commerce-react-wonderbike.vercel.app/",
    github: "https://github.com/Nath-Maya/ecommerce-React.git",
    image: "/src/assets/img/projects/ecommerce-react.png",
    tags: [TAGS.React, TAGS.Bootstrap, TAGS.Firebase],
  },
  {
    title: "ToDo",
    description:
      "ToDo App es una aplicación simple para gestionar tareas. Permite a los usuarios agregar, editar, eliminar y marcar tareas como completadas. Esta aplicación está construida con Angular y utiliza Firebase para el almacenamiento de datos y el hosting.",
    link: "https://todo-angular-83658.web.app/home",
    github: "https://github.com/Nath-Maya/toDo-App.git",
    image: "/src/assets/img/projects/toDo.png",
    tags: [TAGS.Angular, TAGS.Firebase],
  },
];
---

{
  (
    <div class="flex flex-col gap-y-14">
      {PROJECTS.map(({ image, title, description, tags, link, github }) => (
        <article>
          <h3 class="text-xl text-lime-400 dark:text-gray-100">{title}</h3>
          <p class="my-3 text-justify"> {description}</p>
          <ul class="flex flex-row mb-2 gap-x-2">
            {tags.map((tag) => (
              <li>
                <span
                  class={`flex gap-x-2 rounded-full text-xs ${tag.class} py-1 px-2 `}
                >
                  <tag.icon class="size-4" />
                  {tag.name}
                </span>
              </li>
            ))}
          </ul>
          <img
            class="rounded shadow-2xl shadow-white/10 size-8/12"
            src={image}
            alt={`Captura de pantalla del proyecto ${image}`}
          />
          <div class="pt-3">
            <span class="bg-gray-100 text-gray-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded me-2 dark:bg-gray-700 dark:text-gray-400 border border-gray-500 ">
              <WindownIcon class="size-5" />
              <a class="p-1" href={link} target="_blank">
                Preview
              </a>
            </span>
            <span class="bg-gray-100 text-gray-800 text-xs font-medium inline-flex items-center px-2.5 py-0.5 rounded me-2 dark:bg-gray-700 dark:text-gray-400 border border-gray-500 ">
              <DeviceIcon class="size-5" />
              <a class="p-1" href={github} target="_blank">
                Code
              </a>
            </span>
          </div>
        </article>
      ))}
    </div>
  )
}
